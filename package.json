{
  "name": "granboard-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=\"--no-deprecation --no-warnings\" next dev -p 8080",
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --no-warnings\" next build",
    "start": "cross-env NODE_OPTIONS=\"--no-deprecation --no-warnings\" next start -p 8080",
    "lint": "eslint .",
    "test": "cross-env NODE_OPTIONS=\"--no-deprecation --no-warnings\" jest",
    "test:watch": "cross-env NODE_OPTIONS=\"--no-deprecation --no-warnings\" jest --watch",
    "test:coverage": "cross-env NODE_OPTIONS=\"--no-deprecation --no-warnings\" jest --coverage --passWithNoTests=false",
    "test:ci": "cross-env NODE_OPTIONS=\"--no-deprecation --no-warnings\" jest --ci --coverage --maxWorkers=2",
    "test:e2e": "playwright test",
    "test:e2e:ci": "playwright test --project=chromium --project=firefox",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.1.0",
    "next": "^16.0.1",
    "next-intl": "^4.4.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/web-bluetooth": "^0.0.21",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-next": "16.0.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16",
    "typescript": "^5"
  }
}
